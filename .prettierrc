{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"@trivago/prettier-plugin-sort-imports"
	],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],

	"importOrder": ["<THIRD_PARTY_MODULES>", "(components/|./index)", "^../(.*)$"]
}
